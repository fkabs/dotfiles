[alias]    
    # basic
    br = branch
    ci = commit
    cl = clone
    co = checkout
    cp = cherry-pick
    st = status -sb
    
    # tweak defaults
    ai = add --interactive
    branch = branch -ra
    diff = diff --word-diff
    f = "!git ls-files | grep -i"
    grep = grep -Ii
    
    # commit
    amend = commit --amend
    cm = commit -m
    cma = commit -a -m
    
    # log commands
    filelog = log -u
    fl = log -u
    graph = log --graph --oneline --decorate --all
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [a:%an,c:%cn]" --decorate --numstat
    llc  = "!f() { git ll "$1"^.."$1"; }; f"
    ln = log --pretty=format:"%h\\ %s\\ [%cn]"
    lnc = "!f() { git ln "$1"^.."$1"; }; f"
    ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate --date=relative
    lsc  = "!f() { git ls "$1"^.."$1"; }; f"
    lol = log --oneline --decorate --all
    
    # diff
    d = diff --word-diff
    dc = diff --cached
    dft = difftool
    diff-all = !"for name in $(git diff --name-only $1); do git difftool -y $1 $name & done"
    diff-changes = diff --name-status -r
    diff-staged = diff --cached
    diff-stat = diff --stat --ignore-space-change -r
    diff-upstream = !git fetch origin && git diff main origin/main
    diffr  = "!f() { git diff "$1"^.."$1"; }; f"
    dlc = diff --cached HEAD^
    dr  = "!f() { git diff -w "$1"^.."$1"; }; f"
    
    # reset commands
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard
    
    # squash commands
    squash-all = "!f(){ \
        if [ $# -eq 0 ]; then \
            echo 'Usage: git squash-all -m \"commit message\"' >&2; \
            return 1; \
        fi; \
        git reset $(git commit-tree \"HEAD^{tree}\" \"$@\"); \
        };f"
    
    squash-last-n = "!f(){ \
        if [ -z \"$1\" ]; then \
            echo 'Usage: git squash-last-n <number> -m \"message\"' >&2; \
            return 1; \
        fi; \
        n=\"$1\"; shift; \
        if ! [ \"$n\" -gt 0 ] 2>/dev/null; then \
            echo 'Error: First argument must be a positive number' >&2; \
            return 1; \
        fi; \
        case \"$*\" in \
            *-m*|*--message*) ;; \
            *) echo 'Error: Please provide a commit message with -m \"message\"' >&2; return 1 ;; \
        esac; \
        count=$(git rev-list --count HEAD); \
        if [ \"$n\" -gt \"$count\" ]; then \
            echo \"Error: Only $count commits available, cannot squash $n\" >&2; \
            return 1; \
        fi; \
        git reset $(git commit-tree \"HEAD^{tree}\" -p \"HEAD~$n\" \"$@\"); \
        };f"
    
    # git svn
    svnd = svn dcommit
    svnl = svn log --oneline --show-commit
    svnr = svn rebase
    
    # various useful
    # last tag created
    lasttag = describe --tags --abbrev=0
    lt = describe --tags --abbrev=0

    # conflict/merges
    # ours = "!f() { git co --ours $@ && git add $@; }; f"
    # theirs = "!f() { git co --theirs $@ && git add $@; }; f"

    # list remotes
    rem = "!git config -l | grep remote.*url | tail -n +2"

    # show last log entry
    last = log -1 HEAD --stat

    # initial empty commit
    empty = "!git commit -am\"[empty] Initial commit\" --allow-empty"
    
    # show files not in repo
    others = ls-files --others --ignored --exclude-from=.gitignore
    
    # stash all
    staash = stash --all

    # list all aliases
    la = "!git config -l | grep alias | cut -c 7-"
    
    # worktree list
    wl = worktree list
    # undo from here http://megakemp.com/2016/08/25/git-undo/
    undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"

[branch]
    sort = -committerdate

[column]
    ui = auto

[core]
    attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore_global

[diff]
	tool = bc

[difftool]
    prompt = false

[difftool "bc"]
	trustExitCode = true

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[difftool "exiftool"]
    cmd = exiftool -G1 -a -u "$LOCAL" "$REMOTE" | less

[gpg]
    format = ssh

[merge]
	tool = bc

[mergetool "bc"]
	trustExitCode = true

[pager]
    difftool = true

[rerere]
	enabled = true

