#!/bin/zsh
#
# .zsh_aliases - Set whatever shell aliases you want.
#

# General aliases
alias la="ls -la"
alias ll="ls -l"

# Shortcuts for easier navigation
alias ~="cd ~"
alias -- -="cd -"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"

# Use bat (https://github.com/sharkdp/bat) instead of cat
alias cat="bat"
alias rcat='\bat --paging=never'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

# Make and change directory
alias mkcd='(){mkdir -p "$1"; cd "$1"}'

# Shortcut for colima nerdctl
if [[ $(uname) == Darwin ]]; then
    alias nerdctl="nerdctl.lima"
fi

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'
alias fpath='echo -e ${FPATH//:/\\n}'
alias mpath='echo -e ${MANPATH//:/\\n}'
alias ipath='echo -e ${INFOPATH//:/\\n}'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Please = sudo with alias expansion
alias please='sudo '

# Get week number
alias week='date +%V'
