layout_venv() {
    local venv_path="$1"
    
    if [ -d "${VIRTUALENV_DIR}/$1" ]; then
        venv_path="${VIRTUALENV_DIR}/${venv_path}"
    else
        echo "Virtual environment '$venv_path' not found"
        exit 1
    fi

    
    # activate virtualenv
    source ${venv_path}/bin/activate
    
    # https://github.com/direnv/direnv/wiki/PS1
    unset PS1
}
