layout_venv() {
    local venv_path
    
    if [ -s "$WORKON_HOME" ]; then
        venv_path="${WORKON_HOME}/$1"
    else
        venv_path="$1"
    fi
    
    source ${venv_path}/bin/activate
    
    # https://github.com/direnv/direnv/wiki/PS1
    unset PS1
}
